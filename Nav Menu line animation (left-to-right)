/* Base state: top-level menu links only */
selector .elementor-nav-menu > li > a {
  position: relative;
  color: inherit;
  text-decoration: none;
  transition: color 0.3s ease;
}

/* Create the underline animation */
selector .elementor-nav-menu > li > a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 2px; /* line thickness */
  background-color: #f2c894; /* underline color */
  transition: width 0.3s ease;
}

/* Hover animation for top-level items */
selector .elementor-nav-menu > li > a:hover::after {
  width: 100%;
}

/* Prevent underline on sub-menu links */
selector .elementor-nav-menu .sub-menu a::after {
  display: none;
}
